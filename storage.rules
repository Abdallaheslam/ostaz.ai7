rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // المجلد العام للقراءة فقط
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // صور المنتجات - قراءة عامة، كتابة للمديرين
    match /products/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // صور المستخدمين - كل مستخدم يمكنه رفع صورته فقط
    match /users/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // المستندات - قراءة عامة، كتابة للمديرين
    match /documents/{documentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}